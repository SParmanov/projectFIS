<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="@color/color2"
    android:padding="15dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/id"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        />
    <TextView
        android:layout_toRightOf="@+id/id"
        android:id="@+id/kazakh_names"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kazakhNames"
        />

    <TextView
        android:id="@+id/lengthSura"
        android:textSize="10sp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/id"
        android:layout_below="@+id/kazakh_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lengthSura"
        />

    <TextView
        android:id="@+id/kuranAddress"
        android:layout_toRightOf="@+id/id"
        android:layout_below="@+id/lengthSura"
        android:textSize="10sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuranAddress"
        />
    <TextView
        android:id="@+id/arabic_names"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arabicNames"/>
</RelativeLayout>