<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="@color/color2"
    >
    <TextView
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:id="@+id/id"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        />
    <TextView
        android:paddingLeft="5dp"
        android:layout_below="@+id/id"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:id="@+id/kuranKazakh"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translit"
        />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/translit"
        android:layout_below="@+id/kuranKazakh"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuranKazakh"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_margin="5dp"
        android:id="@+id/kuranArabic"
        android:layout_below="@+id/translit"
        android:textSize="35sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuranArabic"
        />
</RelativeLayout>